<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:textAlignment="center">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frameLayout"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp">

        <ViewAnimator
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewAnimator"
            android:layout_gravity="center_horizontal|top" />

        <TextView
            android:layout_width="299dp"
            android:layout_height="198dp"
            android:text="Conoce y Localiza Farmacias de la Republica Dominicana, obteniendo informacion como precios de los medicamentos y posibles rutas "
            android:id="@+id/textView9"
            android:layout_gravity="center_horizontal|bottom"
            android:fontFamily="@string/store_picture_message"
            android:textColor="#326915"
            android:textSize="25dp"
            android:layout_alignTop="@+id/frameLayout"
            android:layout_alignStart="@+id/imageView2"
            android:layout_marginTop="173dp"
            android:scrollIndicators="bottom"
            android:textAlignment="center" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@drawable/farmappicon"
            android:layout_gravity="center_horizontal|top"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </FrameLayout>

</RelativeLayout>